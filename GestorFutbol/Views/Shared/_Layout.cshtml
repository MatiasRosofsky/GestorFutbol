<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Gestor</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")  

</head>
<body>
    <div class="navbar navbar-fixed-top" id="barra">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               <strong> @Html.ActionLink("La Liga", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</strong> 
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("TORNEOS", "Index", "Torneos")</li>
                    <li>@Html.ActionLink("EQUIPOS", "Index", "Equipos")</li>
                    <li>@Html.ActionLink("JUGADORES", "Index", "Jugadores")</li>
                    <li>@Html.ActionLink("PARTIDOS", "Index", "Partidos")</li>
                    <li>@Html.ActionLink("POSICIONES", "Posiciones", "Equipos")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                  @Html.Partial("_LoginPartial") 
            </div>
        </div>

        <hr class="header-hr">

    </div>

    <div class="container body-content">

        <div class="container">
            <div class="row">

                <!-- columna izquierda -->
                <div class="col-md-2">
                    <!-- redes sociales -->
                    <div class="row justify-content-lg-end text-center">
                        <div id="redes">
                            <p class="h4 p-3 box-title">redes sociales</p>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex align-items-center">
                                    <i class="fab fa-instagram fa-2x"></i>
                                    <a style="color:black;" href="https://instagram.com"><p class="ml-3">Instagram</p></a>
                                </li>
                                <li class="list-group-item d-flex align-items-center">
                                    <i class="fab fa-facebook-square fa-2x"></i>
                                    <a style="color:black;" href="https://facebook.com"><p class="ml-3">Facebook</p></a>
                                </li>
                                <li class="list-group-item d-flex align-items-center">
                                    <i class="fab fa-twitter-square fa-2x"></i>
                                    <a style="color:black;" href="https://twitter.com"><p class="ml-3">Twitter</p></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- end of redes sociales -->

                    <!-- proximos partidos -->
                    @{Html.RenderAction("_CalendarioPartial", "Home");}
                    <!-- end of proximos partidos -->

                </div>
                <!-- end of columna izquierda -->

                <div class="col-md-8">@RenderBody()</div>

                <!-- columna derecha -->
                <div class="col-md-2">
                    
                    @{Html.RenderAction("_PosicionesPartial", "Home");} 

                    <!-- titulares -->
                    <div class="row justify-content-lg-start ml-lg-2">
                        <div id="titulares">
                            <p class="h4 p-3 box-title text-center">titulares</p>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <i class="far fa-newspaper fa-sm"></i>
                                    <a href="" class="text-dark"><span>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Et, non!</span></a>
                                </li>
                                <li class="list-group-item">
                                    <i class="far fa-newspaper fa-sm"></i>
                                    <a href="" class="text-dark"><span>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ipsam, fugit.</span></a>
                                </li>
                                <li class="list-group-item">
                                    <i class="far fa-newspaper fa-sm"></i>
                                    <a href="" class="text-dark"><span>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Sapiente, officiis.</span></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- end of titulares -->

                </div>
                <!-- end of columna derecha -->
            </div>
        </div>
        
        <hr>

        <footer>
            <p>&copy; @DateTime.Now.Year - Proyecto Gestion de Torneos</p>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
